<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<section class="container">
    <h1 class="mb-5">My Cart</h1>
    <div class="row">
        <div class="col-lg-8">
            <% for(let item of user.cart){ %>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img src="<%= item.img %>" class="img-fluid rounded-start" alt="product image">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title d-flex justify-content-between align-items-center">
                            <span><%= item.name %></span>
                            <span class="btn delete-btn" product-id="<%= item._id%>"><i class="fa-solid fa-xmark"></i></span>
                          </h5>
                          <h7 class="card-title"><%= item.price %></h7>
                          <p class="card-text"><%= item.desc %></p>
                        </div>
                      </div>
                    </div>
                  </div>
            <% } %>
        </div>
    </div>
  </section>
  <script src="/js/common.js"></script>